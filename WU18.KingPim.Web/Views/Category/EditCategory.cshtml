@model CategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="mt-5">
    <div class="row">
        <div class="col-md-12 offset-md-1">
            <div class="card">
                <div class="card-header">Create Category</div>
                <div class="card-body">
                    <form asp-controller="Category" asp-action="EditCategory" asp-route-id="@Model.Id" method="post" class="col-md-12 mt-4 mt-md-0">
                        <div class="form-row">
                            <div class="form-group col-md-4"></div>
                            <div class="form-group col-md-4">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" name="Name" type="text" class="form-control" />
                            </div>
                            <div class="form-group col-md-4"></div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4"></div>
                            <div class="form-group col-md-4 text-center">
                                <button type="submit" class="btn btn-outline-success">Save</button>
                            </div>
                            <div class="form-group col-md-4"></div>
                        </div>
                    </form>
                    <form asp-controller="Category" asp-action="RemoveCategory" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-outline-warning">Remove Category</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
