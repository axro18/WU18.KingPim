@using Microsoft.EntityFrameworkCore.Query.Expressions
@model ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="mt-5">
    <div class="row">
        <div class="col-md-12 offset-md-1">
            <div class="card">
                <div class="card-header">Create Product</div>
                <div class="card-body">
                    <form class="col-md-12 mt-4 mt-md-0" asp-controller="Product" asp-action="EditProduct" asp-route-id="@Model.Id" method="post">
                        <div class="form-row">
                            <div class="col-md-2 form-group"></div>
                            <div class="col-md-4 form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" name="Name" class="form-control" type="text" />
                            </div>
                            <div class="col-md-4 form-group">
                                <label asp-for="ArtNumber">Article Number</label>
                                <input asp-for="ArtNumber" name="ArtNumber" class="form-control" type="text" />
                            </div>
                            <div class="col-md-2 form-group"></div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-2 form-group">

                            </div>
                            <div class="col-md-4 form-group">
                                <label asp-for="StockBalance">Stock Balance</label>
                                <input asp-for="StockBalance" name="StockBalance" class="form-control" type="text" />
                            </div>
                            <div class="col-md-4 form-group">
                                <label asp-for="PriceExVat">Price excluding VAT</label>
                                <input asp-for="PriceExVat" name="PriceExVat" class="form-control" type="text" />
                            </div>
                            <div class="col-md-2 form-group">

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                <label asp-for="PackageWidth">Package Width (mm)</label>
                                <input asp-for="PackageWidth" name="PackageWidth" class="form-control" type="text" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label asp-for="PackageHeight">Package Height (mm)</label>
                                <input asp-for="PackageHeight" name="PackageHeight" class="form-control" type="text" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label asp-for="PackageDepth">Package Depth (mm)</label>
                                <input asp-for="PackageDepth" name="PackageDepth" class="form-control" type="text" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label asp-for="PackageWeight">Package Weight (g)</label>
                                <input asp-for="PackageWeight" name="PackageWeight" class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="form-row">

                            <div class="col-md-4 form-group">
                                <label asp-for="StartCampaign">Start Campaign Date</label>
                                <input asp-for="StartCampaign" name="StartCampaign" class="form-control" type="date" />
                            </div>
                            <div class="col-md-4 form-group">
                                <label asp-for="EndCampaign">End Campaign Date</label>
                                <input asp-for="EndCampaign" name="EndCampaign" class="form-control" type="date" />
                            </div>
                            <div class="col-md-4 form-group">
                                <label asp-for="CampaignPrice">Campaign Price %</label>
                                <input asp-for="CampaignPrice" name="CampaignPrice" class="form-control" type="text" />
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="col-md-2 form-group"></div>
                            <div class="custom-control custom-switch">
                                <div class="col-md-4 form-group">
                                    <input asp-for="Publish" name="Publish" type="checkbox" class="custom-control-input" id="customSwitch1" />
                                    <label asp-for="Publish" class="custom-control-label" for="customSwitch1">Publish</label>
                                </div>
                            </div>
                            <div class="form-group col-md-4"></div>
                            <div class="custom-control custom-switch">
                                <div class="col-md-4 form-group">
                                    <input asp-for="Discontinued" name="Discontinued" type="checkbox" class="custom-control-input" id="customSwitch2" />
                                    <label asp-for="Discontinued" class="custom-control-label" for="customSwitch2">Discontinued</label>
                                </div>
                            </div>
                            <div class="col-md-2 form-group"></div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="SubCategory">SubCategory</label>
                                @await Component.InvokeAsync("SubCategoryDropDown", new { selectedSubCategoryId = Model.SubCategoryId })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-12 text-md-center">
                                <button type="submit" class="btn btn-outline-success">Save</button>
                                <div class="col-md-2">
                                    <a asp-controller="Product" asp-action="RemoveProduct" asp-route-id="@Model.Id" class="btn btn-outline-danger">Remove Product</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

