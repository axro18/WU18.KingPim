
@{
    ViewData["Title"] = "CreateEditProduct";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 offset-md-1">
            <div class="card">
                <div class="card-header">Create Product</div>
                <div class="card-body">
                    <form class="col-md-12 mt-4 mt-md-0">
                        <div class="form-row">
                            <div class="col-md-2 form-group">

                            </div>
                            <div class="col-md-4 form-group">
                                <label for="surname">Name</label>
                                <input class="form-control" type="text" />
                            </div>
                            <div class="col-md-4 form-group">
                                <label for="email">Article Number</label>
                                <input class="form-control" type="email" />
                            </div>
                            <div class="col-md-2 form-group">

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-2 form-group">

                            </div>
                            <div class="col-md-4 form-group">
                                <label for="surname">Stock Balance</label>
                                <input class="form-control" type="text" />
                            </div>
                            <div class="col-md-4 form-group">
                                <label for="email">Price excluding VAT</label>
                                <input class="form-control" type="email" />
                            </div>
                            <div class="col-md-2 form-group">

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                <label for="name">Package Width (mm)</label>
                                <input class="form-control" type="text" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="surname">Package Height (mm)</label>
                                <input class="form-control" type="text" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="email">Package Depth (mm)</label>
                                <input class="form-control" type="email" />
                            </div>
                            <div class="col-md-3 form-group">
                                <label for="name">Package Weight (g)</label>
                                <input class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="custom-control custom-switch">
                                <div class="col-md-4 form-group">
                                    <input type="checkbox" class="custom-control-input" id="customSwitch1" />
                                    <label class="custom-control-label" for="customSwitch1">Publish</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

